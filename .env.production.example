# Production Environment Template
# For AWS EC2, DigitalOcean, or similar VPS deployments
# UPDATE ALL VALUES BEFORE DEPLOYMENT!

# Database (use RDS endpoint for AWS)
DATABASE_URL=mysql+pymysql://portal_user:CHANGE_ME_SECURE_PASSWORD@your-rds-endpoint.rds.amazonaws.com:3306/lost_found_portal
DB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD_SECURE
DB_NAME=lost_found_portal
DB_USER=portal_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Security - MUST BE CHANGED!
JWT_SECRET_KEY=CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING_32_CHARS_MINIMUM
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ML Service Configuration
ML_SERVICE_URL=http://ml_service:8001
ML_SERVICE_HOST=0.0.0.0
ML_SERVICE_PORT=8001

# Frontend Configuration
VITE_API_URL=https://your-domain.com/api

# Environment
ENVIRONMENT=production
PYTHONUNBUFFERED=1

# Security Headers
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
